<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

  <h3>以下の内容でアップロード</h3>

  <%= form_for(@pictures) do |f| %>
    <%= f.hidden_field :image %>
    <%= f.hidden_field :image_cache %>
    <%= f.hidden_field :comment %>
    <h3>写真：<%= image_tag @pictures.image.url %></h3>
    <h3>コメント：<%= @pictures.comment %></h3>
    <%= f.submit "アップロード",class: 'btn btn-primary btn-block' %>
  <% end %>

  <%= form_for(@pictures, url: new_picture_path, method: 'get') do |f| %>
    <%= f.hidden_field :image %>
    <%= f.hidden_field :image_cache %>
    <%= f.hidden_field :comment %>
    <%= f.submit "もどる", name: 'back',class: 'btn btn-default btn-block' %>
  <% end %>
  </div>
</div>
