<%= form_for(@pictures, url: choose_new_or_edit) do |f| %>
  <% if @pictures.errors.any? %>
    <div id="error_explanation">
      <h2><%= @pictures.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @pictures.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :comment %>
  <%= f.text_field :comment %>
  <br>
  <%= f.submit %>
<% end %>