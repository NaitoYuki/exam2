<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
      <% unless notice %>
        <% flash.each do |name, msg| %>
          <div class="alert alert-<%= name %>">
            <a class="close" data-dismiss="alert">×</a>
            <%= msg %>
          </div>
        <% end %>
      <% end %>
      <div id="picture_text">
        <p><%= link_to "写真をアップロードする", new_picture_path, class: "btn btn-info btn-block" %></p>
      </div>
      <div id="picture_list">
        <% @pictures.each do |picture| %>
        <div id="picture">
          <div id="pic">
            <%= image_tag picture.image.url %>
          </div>
          <p>コメント：<%= picture.comment %></p>
          <div class="profileimage">
            <%= profile_img(picture.user) if profile_img(picture.user) %>　ユーザ名：<%= picture.user.name %>が投稿</br>
          </div>
          <div id="button">
          <%= link_to "更新", edit_picture_path(picture.id), class: 'btn btn-default btn-sm btn-primary' %>
          <%= link_to "削除", picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-default btn-sm btn-warning' %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
